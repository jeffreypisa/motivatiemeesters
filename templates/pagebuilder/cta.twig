<section class="mod-cta {{ item.achtergrondkleur }} {% if item.achtergrondkleur == 'bg-dark' %}text-white{% endif %}" data-aos="fade-up" data-aos-duration="800">
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1 text-center">
				{% if item.titel %}
				<h2 class="{{ item.locatie_tekstvlak }}">{{ item.titel }}</h2>
				{% endif %}
				{% if item.tekst %}
				{{ item.tekst }}
				<br><br>
				{% endif %}
				{% if item.link %}
				<a href="{{ item.link.url }}" class="btn btn-primary"> {{ item.link.title }} </a>
				{% endif %}
			</div>
		</div>
	</div>
</section>