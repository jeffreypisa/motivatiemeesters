<section class="mod-cta bg-white" data-aos="fade-up" data-aos-duration="800">
  <div class="container">
  	<div class="row">
  		<div class="col-md-10 offset-md-1 text-center">
				{% if item.subtitel %}
					<h3 class="subtitel"> {{ item.subtitel }} </h3>
				{% endif %}
		    {% if item.titel %}
		      <h2 class="{{ item.locatie_tekstvlak }}">{{ item.titel }}</h2>
		    {% endif %}
		    {% if item.tekst %}
		      {{ item.tekst }}
		      <br><br>
		    {% endif %}
		    {% if item.btn_show %}
		      <a href="{{ item.btn_link }}" class="btn btn-outline-secondary"> {{ item.btn_label }} </a>
		    {% endif %}
  		</div>
  	</div>
  </div>
</section>