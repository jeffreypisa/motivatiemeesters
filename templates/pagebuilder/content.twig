<section class="mod-content
{{ item.locatie_tekstvlak }} has-{{ item.achtergrond }} {% if item.achtergrond == 'bg-blue' %}bg-mm{% endif %}">
<div class="{{ item.achtergrond }} {% if item.achtergrond == 'bg-dark' or item.achtergrond == 'bg-blue' %}text-white{% else %}{% endif %}">
	<div class="container ">

		{% if (item.locatie_tekstvlak == 'links') or (item.locatie_tekstvlak == 'rechts') %}
		<div class="row no-gutters" data-aos="fade-up" data-aos-duration="800">
			<div class="col-md-6 order-first {% if item.locatie_tekstvlak == 'links' %}order-md-last{% endif %}">
				{% if item.afbeelding %}
				<div id="carousel{{ sectionno }}" class="h-100 carousel slide carousel-fade" data-ride="carousel">
					<div class="carousel-inner h-100">
						{% for p in item.afbeelding %}
						{% set attachment = TimberPost(p.id) %}
						<div class="carousel-item h-100{% if loop.first %} active {% endif %}">
							<div class="bg-cover ratio-4x3" style="background-image: url({{TimberImage(p.id).get_src|resize(800)}})"> </div>
						</div>
						{% endfor %}
					</div>
					{% if item.afbeelding|length > 1 %}
					<a class="carousel-control-prev" href="#carousel{{ sectionno }}" role="button" data-slide="prev">
						<i class="fal fa-chevron-left"></i>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carousel{{ sectionno }}" role="button" data-slide="next">
						<i class="fal fa-chevron-right"></i>
						<span class="sr-only">Next</span>
					</a>
					{% endif %}
				</div>
				{% endif %}
			</div>
			<div class="col-md-6 {% if item.locatie_tekstvlak == 'links' %} order-first {% endif %} ">
				<div class="contentvlak">
					{% if item.titel %}
					<h2 class="{{ item.locatie_tekstvlak }}">{{ item.titel }} <span style="font-size: 16px"> {{ item.titel_light }}</span></h2>
					{% endif %}
					{% if item.tekst %}
					{{ item.tekst }}
		          	{% endif %}
					  {% if item.link %}
					<a href="{{ item.link.url }}" class="btn {% if item.achtergrond == 'bg-dark' %}btn-secondary{% else %}btn-primary{% endif %}"> {{ item.link.title }} </a>
					{% endif %}
				</div>
			</div>
		</div>
		{% else %}
		<div class="card bg-white">
			<div class="card-body">
				<div class="row">
					<div class="col-md-10 offset-md-1">
						{% if item.afbeelding %}
						<img src="{{ item.afbeelding }}" width="100">
						{% endif %}
						{% if item.titel %}
							<h2 class="{{ item.locatie_tekstvlak }}">{{ item.titel }}</h2>
						{% endif %}
						{% if item.tekst %}
						{{ item.tekst }}
	            		{% endif %}
						{% if item.link %}
						<a href="{{ item.link.url }}" class="btn btn-secondary"> {{ item.link.title }} </a>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
		{% endif %}
	</div>
</div>
</section>