<section class="mod-accordion 
{% if item.achtergrondkleur == 'blauw' %} bg-blue 
{% elseif item.achtergrondkleur == 'geel' %} bg-yellow 
{% elseif item.achtergrondkleur == 'lichtgrijs' %} bg-light 
{% else %} bg-white {% endif %}">
  <div class="container">
		<div class="accordion" id="accordion">
			{% if item.card %}
				{% set cardno = 1 %}
				{% for card in item.card %}
				  <div class="item">
			      <a id="heading{{ cardno }}" class="btn btn-block" data-toggle="collapse" data-target="#collapse{{ cardno }}" aria-controls="collapse{{ cardno }}">
			        <h5>{{ card.vraag }}</h5>
			      </a>
				
				    <div id="collapse{{ cardno }}" class="collapse" aria-labelledby="heading{{ cardno }}" data-parent="#accordion">
				    	<div class="row">
				    		<div class="col-md-10 offset-md-1">
				    		<br>
				        	{{ card.antwoord }}
				        	<br>
				    		</div>
				    	</div>
				    </div>
				  </div>
				  {% set cardno = cardno + 1 %}
				{% endfor %}
			{% endif %}
		</div>
  </div>
  <div class="clearfix"></div>
</section>