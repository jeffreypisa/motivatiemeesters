<section class="mod-tijdlijn" data-aos="fade-up" data-aos-duration="800">
  <div class="container">
  	<div class="card">
  		<div class="card-body">
		    {% for blokitem in item.blok %}
		    	<div class="blokitem">
		    		<div class="row">
		    			<div class="col d-md-none order-first"> 
		    				<div class="number"> {{ loop.index }} </div>
		    			</div>
			    		{% if loop.index is odd %}
			    			<div class="col-md-5">
			    				<img src="{{ blokitem.afbeelding }}">
			    			</div>
			    			<div class="col-md-2 d-none d-md-block"> 
			    				<div class="number"> {{ loop.index }} </div>
			    			</div>
			    			<div class="col-md-5 odd">
			    				<h3> {{ blokitem.titel }} </h3>
			    				<p> {{ blokitem.tekst }} </p>
			    			</div>
				    	{% else %}
				    		<div class="col-md-5 even">
			    				<h3> {{ blokitem.titel }} </h3>
			    				<p> {{ blokitem.tekst }} </p>
			    			</div>
			    			<div class="col-md-2 d-none d-md-block"> 
			    				<div class="number"> {{ loop.index }} </div>
			    			</div>
			    			<div class="col-md-5 order-first order-md-last">
			    				<img src="{{ blokitem.afbeelding }}">
			    			</div>
				    	{% endif %}
				    </div>
			    </div>
		    {% endfor %}
		  </div>
    </div>
  </div>
</section>