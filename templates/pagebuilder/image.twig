<section class="mod-featured d-flex align-items-end">
	<div class="bg" style="background-image: url({{ item.afbeelding }});"></div>
	<div class="container">
		{% if item.titel %}
			<div class="row">
				<div class="{% if item.uitlijning == 'rechts' %} col-md-9 offset-md-3 text-right {% else %} col-md-9 {% endif %}">
					<h2 class="h1" {% if item.uitlijning == 'rechts' %} data-aos="fade-left" {% else %} data-aos="fade-right" {% endif %} data-aos-duration="800"> {{ item.titel }}</h2>
				</div>
			</div>
		{% endif %}
	</div>
</section>